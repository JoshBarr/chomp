{% extends "template.twig" %}

{% block content_outer %}

<div class="project__meta content">
	<h4>
		<a href="/project/{{name}}">{{client.name}}</a>
	</h4>
	<h1>
		<span class="lightweight">{{ project.job_code }}</span> {{ project.name }}
	</h1>

	<p class='intro'>
		{{ project.description }}
	</p>

	<p>
	{% if is_granted('ROLE_ADMIN') %}
	
		<a href="{{ edit }}" class='btn btn-primary'>Edit this project</a>
	
	{% endif %}

	{% if project.basecamp_url %}
	
		<a href="{{ project.basecamp_url }}" class='btn btn-secondary'>See this project on basecamp</a>
	{% endif %}
	</p>
	
</div>


<div class="project__items content">
	{% if project.groups|length == 0 %} 
	<p>
		No images yet
	</p>
	{% endif %}
	{% for group in project.blocks %}
		{% if "children" in group|keys %}
			<h2>{{group.name}}</h2>
			
			{% for child in group.children %}
				{% include "project-item.twig" with {"data": child, "group": group.name} %}
			{% endfor %}
			
			<hr>
		{% else %}
			{% include "project-item.twig" with {"data": group} %}
		{% endif %}
	
	{% endfor %}
</div>


{% endblock %}
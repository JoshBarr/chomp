{% extends "template.twig" %}


{% block content_outer %}
{{ form_start(form) }}
<div class="project__meta content" data-edit-project>

    <a href="/project/{{name}}/{{project}}/">Back to project</a>

	{{ form_errors(form) }}

	<div class="form__errors">	
		{{ form_errors(form.name) }}
	</div>

	<div class="form__widget">	
		{{ macros.bigTransparentField(form.name) }}
	</div>



    <div class="form__widget">
		<label>Job code:</label>
		{{ macros.textField(form.job_code) }}
	</div>

	<div class="form__widget textarea--big">
		<label>Description:</label>
		{{ macros.textField(form.description) }}
	</div>

	
	<div class='form__widget'>
		<label>Preview URL:</label>
		{{ macros.textField(form.preview_url) }}
		<span class="label__helper">
			Where you can find the working code (if applicable), eg http://preview.nzfest.springload.co.nz/
		</span>
	</div>

	<div class='form__widget'>
		<label>Basecamp URL:</label>
		{{ macros.textField(form.basecamp_url) }}
		<span class="label__helper">
			e.g http://springload.basecamp.com/xxx
		</span>
	</div>
</div>
<div class="project__meta content">
	<div class=" clearfix">
		<p class='right'>
			<span class='btn btn-secondary ' data-add-group>Add work block</span>
		</p>
		<h1 class='left'>Work blocks</h1>
	</div>
	
	<div data-group-container class='mt-xl group__container'></div>

	<div class="mt-xl">
		<a href="/project/{{name}}/{{project}}/" class='btn btn-cancel'>Cancel</a>

		<button class='btn btn-primary' type="submit" data-submit>
			Save
		</button>
	</div>
</div>
	{{ form_end(form) }}
{% endblock %}